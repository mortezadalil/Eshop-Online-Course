@using Eshop.ViewModels.Account
@model DetailUserVm

<h1>Add User</h1>

<div class="row">
    <div class="col-md-4">

        <div class="form-group">
            <label asp-for="@Model.UserName" class="control-label"></label>
            <input asp-for="@Model.UserName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="@Model.FirstName" class="control-label"></label>
            <input asp-for="@Model.FirstName" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="@Model.LastName" class="control-label"></label>
            <input asp-for="@Model.LastName" class="form-control" disabled />
        </div>

        <input asp-for="@Model.Id" class="form-control" type="hidden" />

        <div class="form-group">
            <select asp-for="@Model.Roles" asp-items="@((List<SelectListItem>)ViewData["Roles"])" disabled>
                <option value="0">هیچ کدام</option>
            </select>

        </div>


        <form asp-action="Delete" method="POST">
            <input asp-for="@Model.Id" class="form-control" name="Id" type="hidden" />
            <div class="nav-link text-dark">
                <input type="submit" value="حذف" class="btn btn-primary" />
            </div>
        </form>
        <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Edit" asp-route-id="@Model.Id" style="display:inline">ویرایش</a>

    </div>

</div>
