@using Eshop.ViewModels.Account
@model EditProductVm

<h1>Add User</h1>

<div class="row">
    <div class="col-md-4">
        <input asp-for="@Model.Id" class="form-control" type="hidden" />

        <div class="form-group">
            <label asp-for="@Model.Title" class="control-label"></label>
            <input asp-for="@Model.Title" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="@Model.ShortDescription" class="control-label"></label>
            <input asp-for="@Model.ShortDescription" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Description" class="control-label"></label>
            <input asp-for="@Model.Description" class="form-control" disabled />
        </div>

        <div class="form-group">
            <label asp-for="@Model.Price" class="control-label"></label>
            <input asp-for="@Model.Price" class="form-control" disabled />
        </div>


        <div class="form-group">
            <select asp-for="@Model.CompanyId" asp-items="@((List<SelectListItem>)ViewData["Companies"])" disabled>
                <option value="0">هیچ کدام</option>
            </select>

        </div>

        <div class="form-group">
            <select asp-for="@Model.CategoryIds" asp-items="@((List<SelectListItem>)ViewData["Categories"])" disabled>
                <option value="0">هیچ کدام</option>
            </select>

        </div>


        <form asp-action="Delete" method="POST">
            <input asp-for="@Model.Id" class="form-control" name="Id" type="hidden" />
            <div class="nav-link text-dark">
                <input type="submit" value="حذف" class="btn btn-primary" />
            </div>
        </form>
        <a class="btn btn-primary" asp-area="" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" style="display:inline">ویرایش</a>

    </div>

</div>
